@model IEnumerable<RealSourceCore.Models.Order>
<h1>All Orders</h1>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                @{
                    ViewData["Title"] = "My Orders";
                    Layout = "_AppLayout";
                }
            </h2>
            <a asp-controller="Order" asp-action="Create" class="btn btn-outline-primary">Create New Task</a>
        </div>
    </div>
    <br/>
    
    @if (Model.Count() > 0)
    {
        <div class="col-lg-12 grid-margin stretch-card">
           <div class="card">
            <div class="card-body">
     
              <div class="row">
                <div class="col-12">
                  <div class="table-responsive table table-hover table-striped ">
                    <table id="order-listing" class="table">
                      <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Customer</th>
                            <th>Faculty</th>
                            <th>Module Name</th>
                            <th>Academic Level</th>
                            <th>Due Date</th>
                            <th>No Pages</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                      @foreach (var order in Model)
                      {
                          <tr>
                              <td>@order.Id</td>
                              <td>@order.CustomerName</td>
                              <td>@order.Faculty</td>
                              <td>@order.ModuleName</td>
                              <td>@order.AcademicLevel</td>
                              <td>@order.DueDate.ToLongDateString()</td>
                              <td>@order.NoPages</td>
                              <td>
                                  <label class="badge badge-info">On hold</label>
                              </td>
                              <td>
                                  <a asp-controller="Order" asp-action="View" asp-route-Id="@order.Id" class="btn btn-sm btn-outline-primary my-1">View</a>
                                  <a asp-controller="Order" asp-action="Update" asp-route-Id="@order.Id" class="btn btn-sm btn-secondary my-1">Update</a>
                                  <a asp-controller="Order" asp-action="Delete" asp-route-Id="@order.Id" class="btn btn-sm btn-danger my-1">Delete</a>
                              </td>
                          </tr>
                      }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    }
    else
    {
        <p>No tasks have been orders have been created yet</p>
    }
